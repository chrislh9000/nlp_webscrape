<h2 class="subtitle">Sentiment downloads inputs</h2>
<form method="POST" style="width: 70%; margin-left: auto; margin-right: auto"
action='http://localhost:3000/sentiment_score'
encType="multipart/form-data"
>
  <div class="form-group">
    <label for="exampleFormControlFile1">Input dataset</label>
    <input name="input_dataset" type="file" class="form-control-file" id="exampleFormControlFile1">
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput2">Sentiment segmented by:</label>
    <select name="scoring_type" class="form-control">
      <option>overall</option>
      <option>category</option>
      <option>product</option>
    </select>
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput">Dataset Name</label>
    <input name="dataset_name" type="text" class="form-control" id="formGroupExampleInput" placeholder="Buffx_Sleep">
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput">Category/Product Keywords (input if product category is selected). Only one product/category can be inputted at a time</label>
    <input name="segment_keywords" type="text" class="form-control" id="formGroupExampleInput" placeholder="价格,便宜,贵,打折,份量,实惠">
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput">Category/Product name (input if product or category is selected). Only one product/category can be inputted at a time</label>
    <input name="segment_names" type="text" class="form-control" id="formGroupExampleInput"
    placeholder="price">
  </div>
  <button type="submit" class="btn btn-primary">Download dataset with sentiment scores</button>
</form>
