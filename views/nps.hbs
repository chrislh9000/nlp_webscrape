<h2 class="subtitle">NPS scoring inputs</h2>

<form method="POST" style="width: 70%; margin-left: auto; margin-right: auto"
action='http://localhost:3000/nps_output'
encType="multipart/form-data"
>
  <div class="form-group">
    <label for="exampleFormControlFile1">Input dataset</label>
    <input name="input_dataset" type="file" class="form-control-file" id="exampleFormControlFile1">
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput2">NPS scoring by:</label>
    <select name="scoring_type" class="form-control">
      <option>overall</option>
      <option>category</option>
      <option>product</option>
    </select>
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput">Category Keywords (input if category is selected): Separate keywords for different categories with ';'</label>
    <textarea name="category_keywords" class="form-control" id="exampleFormControlTextarea1" placeholder="price_keyword1, price_keyword2, price_keyword3; packaging_keyword1, packaging_keyword2"
     rows="3"></textarea>
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput">Categories/Product names (input if product or category is selected) </label>
    <input name="segment_names" type="text" class="form-control" id="formGroupExampleInput"
    placeholder="price, expiration, flavor, logistics, packaging">
  </div>
  <button type="submit" class="btn btn-primary">Get NPS output(s)</button>
</form>
